<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <parent>
    <artifactId>pet-user</artifactId>
    <groupId>com.yf</groupId>
    <version>1.0-SNAPSHOT</version>
  </parent>
  <modelVersion>4.0.0</modelVersion>
  <groupId>com.yf</groupId>
  <artifactId>pet-user-impl</artifactId>
  <version>1.0-SNAPSHOT</version>
  <build>
    <resources>
      <resource>
        <filtering>true</filtering>
        <directory>src/main/resources</directory>
        <includes>
          <include>**/*.xml</include>
          <include>**/*.properties</include>
          <include>**/*.yml</include>
        </includes>
        <excludes>
          <exclude>**/.git</exclude>
        </excludes>
      </resource>
    </resources>
    <finalName>pet-user</finalName>
    <plugins>
      <plugin>
        <artifactId>maven-resources-plugin</artifactId>
        <version>2.6</version>
        <configuration>
          <encoding>UTF-8</encoding>
          <useDefaultDelimiters>true</useDefaultDelimiters>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-surefire-plugin</artifactId>
        <configuration>
          <skip>true</skip>
          <skipTests>true</skipTests>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <configuration>
          <source>1.7</source>
          <target>1.7</target>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>2.4.1</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <transformers>
                <transformer>
                  <mainClass>com.yf.pet.user.PetUserApplication</mainClass>
                </transformer>
                <transformer>
                  <resource>META-INF/spring.handlers</resource>
                </transformer>
                <transformer>
                  <resource>META-INF/spring.schemas</resource>
                </transformer>
              </transformers>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
  <profiles>
    <profile>
      <id>dev</id>
      <build>
        <filters>
          <filter>profiles/dev/dubbo.properties</filter>
          <filter>profiles/dev/jdbc.properties</filter>
          <filter>profiles/dev/email.properties</filter>
          <filter>profiles/dev/redis.properties</filter>
          <filter>profiles/dev/resources.properties</filter>
          <filter>profiles/dev/yftechoss.properties</filter>
        </filters>
      </build>
    </profile>
    <profile>
      <id>test</id>
      <build>
        <filters>
          <filter>profiles/test/dubbo.properties</filter>
          <filter>profiles/test/jdbc.properties</filter>
          <filter>profiles/test/email.properties</filter>
          <filter>profiles/test/redis.properties</filter>
          <filter>profiles/test/resources.properties</filter>
          <filter>profiles/test/yftechoss.properties</filter>
        </filters>
      </build>
    </profile>
    <profile>
      <id>prod</id>
      <build>
        <filters>
          <filter>profiles/prod/dubbo.properties</filter>
          <filter>profiles/prod/jdbc.properties</filter>
          <filter>profiles/prod/email.properties</filter>
          <filter>profiles/prod/redis.properties</filter>
          <filter>profiles/prod/resources.properties</filter>
          <filter>profiles/prod/yftechoss.properties</filter>
        </filters>
      </build>
    </profile>
  </profiles>
</project>

